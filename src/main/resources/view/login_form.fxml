<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="rootVary" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.LoginFormController">
   <children>
      <AnchorPane fx:id="rootNode" prefHeight="480.0" prefWidth="640.0" style="-fx-background-color: white;">
         <children>
            <Label layoutX="429.0" layoutY="32.0" text="Login">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <JFXTextField fx:id="txtUsername" layoutX="370.0" layoutY="122.0" onAction="#txtUsernameOnAction" prefHeight="24.0" prefWidth="210.0" promptText="Enter your username" />
            <JFXTextField fx:id="txtPassword" layoutX="370.0" layoutY="198.0" onAction="#txtPasswordOnAction" prefHeight="24.0" prefWidth="210.0" promptText="Enter your password" />
            <JFXButton fx:id="btnLogin" buttonType="RAISED" layoutX="457.0" layoutY="314.0" onAction="#btnLoginOnAction" style="-fx-background-color: #0fdbff;" text="Login" textFill="WHITE" />
            <ImageView fitHeight="480.0" fitWidth="320.0">
               <image>
                  <Image url="@../icons/emil-widlund-xrbbXIXAWY0-unsplash.jpg" />
               </image>
            </ImageView>
            <JFXButton fx:id="btnSigninPage" layoutX="354.0" layoutY="418.0" onAction="#btnSigninPageOnAction" prefHeight="24.0" prefWidth="260.0" text=" ">
               <graphic>
                  <Label text="Don't have an account? then click here" textFill="#289cae">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </graphic></JFXButton>
            <Pane prefHeight="480.0" prefWidth="320.0" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
